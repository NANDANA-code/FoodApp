
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#DCE2E1"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:background="@drawable/loho"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:textSize="22dp"
                android:textColor="#E4501E"
                android:text="Crave it? We deliver it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <EditText
            android:textColor="#000000"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:hint=" search for dishes and restaurants "
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E4501E"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="MENU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <HorizontalScrollView android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/mainfood"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/crispy"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/koreanfood"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/meal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/noodles"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/pasta"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/pastanew"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/sandwitch"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            </LinearLayout>

        </HorizontalScrollView>
        <TextView
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E4501E"
            android:gravity="center"
            android:textColor="#FBFBFB"
            android:text="Trending Desserts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <HorizontalScrollView android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"

                    android:background="@drawable/cupcake"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/sweetcake"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/tastycake"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/cakestwabary"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/pa"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>


            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E4501E"
            android:gravity="center"
            android:textColor="#F2F2F2"
            android:text="TOP TODAY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <HorizontalScrollView android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/aa"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bb"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/cc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dd"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:textColor="#F9FAFA"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="order"
                android:background="#2E89D7"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:textColor="#F9FAFA"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="contact"
                android:background="#2E89D7"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:textColor="#F9FAFA"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="rate"
                android:background="#2E89D7"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>



    </LinearLayout>
